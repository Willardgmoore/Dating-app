<%= link_to "Back", :back %>
<h2 class="center-align">Edit <%= resource_name.to_s.humanize %> Profile</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
    <div class="field col s12 m6">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true  %>
    </div>

    <div class="field col s12 m6">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="row">
    <div class="field col s12 m3">
      <%= f.label :age %><br />
      <%= f.number_field :age %>
    </div>

    <div class="field col s12 m3">
      <%= f.label :gender %><br />
      <%= f.text_field :gender %>
    </div>

    <div class="field col s12 m3">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>

    <div class="field col s12 m3">
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </div>
  </div><br>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div><br><br>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>



<!-- TODO: make radio button functional -->
  <div class="field col s12 m3 center-align"> 
  What kind of vehicle do you drive?
    <%= f.radio_button 'vehicle_type', true %>
    <%= f.label :vehicle_type ,'Manual' %>

    <%= f.radio_button 'vehicle_type', false %>
    <%= f.label :vehicle_type ,'Automatic' %>
  </div>

  <div class="actions right-align">
    <%= f.submit "Update" %>
  </div>

<% end %>

<div class="center-align">
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>

<br>
